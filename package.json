{
  "name": "static-prototype",
  "version": "0.0.1",
  "description": "Basic frontend repo for prototypes",
  "main": "index.html",
  "scripts": {
    "test": "npm run browserify && npm run compile:scss",
    "postinstall": "npm run browserify && npm run compile:scss",
    "compile:scss": "node-sass style/scss/main.scss 'dist/css/app.css' --output",
    "browserify": "browserify js/app.js -o dist/js/app.js",
    "watch:scss": "watch-run -p 'style/scss/**/*.scss' 'npm run compile:scss'",
    "watch:js": "watch-run -p 'js/*.js' npm run browserify",
    "watch:all": "npm run watch:scss & npm run watch:js",
    "analyse:css": "parker dist/css/app.css"
  },
  "author": "Christian Heyn",
  "license": "ISC",
  "dependencies": {
    "browserify": "^13.0.0",
    "node-sass": "^3.4.2",
    "normalize.scss": "^0.1.0",
    "parker": "0.0.10",
    "watch-run": "^1.2.4"
  }
}
